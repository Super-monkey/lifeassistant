<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--setting-->
    <style name="MoreSettingItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/more_bg_item_padding</item>
        <item name="android:paddingRight">@dimen/more_bg_item_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/round_corner_item_height</item>
    </style>

    <style name="MoreItemTextStyle">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">@color/settings_entry</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">@dimen/round_corner_item_height</item>
        <item name="android:drawablePadding">12.5dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="TextSettingItem">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">@color/settings_entry</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/more_bg_item_padding</item>
        <item name="android:paddingRight">@dimen/more_bg_item_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/round_corner_item_height</item>
        <item name="android:drawablePadding">12.5dip</item>
    </style>
    <style name="SettingAttributeText">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">@color/settings_attribute</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5.0dip</item>
    </style>


</resources>
