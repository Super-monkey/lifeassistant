<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg_color"
    android:orientation="vertical">

    <com.supermonkey.lifeassistant.view.TitleBar
        android:id="@+id/home_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_title="主页" />

    <com.supermonkey.lifeassistant.view.MyGridLayout
        android:id="@+id/act_home_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-3dp"
        android:background="@color/gridlayout_bg"
        android:orientation="vertical"
        app:itemMargin="1"
        app:numColumns="4" />

</LinearLayout>
